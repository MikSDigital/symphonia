{% extends '::base.html.twig' %}

{% block body %}
    <div class="padding">
        <div class="clr"></div>
        <div id="element-box" class="login">
            <div class="t">
                <div class="t">

                    <div class="t"></div>
                </div>
            </div>
            <div class="m wbg">
                <h1>Administration Login</h1>

                <div id="section-box">
                    <div class="t">
                        <div class="t">
                            <div class="t"></div>
                        </div>
                    </div>
                    <div class="m">
                        <!-- login form -->
                        {{ form_start(form) }}
                            <fieldset class="loginform">
                                <label for="login-username" id="login-username-lbl">User Name</label>
                                {{ form_widget(form.username) }}

                                <label for="login-password" id="login-password-lbl">Password</label>
                                {{ form_widget(form.password) }}

                                <div class="button-holder">
                                    <div class="button1">
                                        <div class="next">
                                            {{ form_row(form.submit) }}
                                        </div>
                                    </div>
                                </div>
                                {{ form_widget(form.remember_me) }}

                                <div class="clr"></div>


                            </fieldset>
                        {{ form_end(form) }}

                        <!-- //login form -->
                        <div class="clr"></div>
                        {% if error %}
                            <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>
                    <div class="b">
                        <div class="b">
                            <div class="b"></div>
                        </div>
                    </div>
                </div>

                <p>Use a valid username and password to gain access to the administrator backend.</p>

                <p><a href="/">Go to site home page.</a></p>
                <div id="lock"></div>
                <div class="clr"></div>
            </div>
            <div class="b">
                <div class="b">
                    <div class="b"></div>
                </div>

            </div>
        </div>
        <noscript>
            Warning! JavaScript must be enabled for proper operation of the Administrator backend.			</noscript>
        <div class="clr"></div>
    </div>
{% endblock %}